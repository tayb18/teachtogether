<div class="body">
  <h1>Sign In</h1>

  <div class = "form-login">
  <%= form_tag "/login" do %>
    <%= label_tag "Email :" %><br>
    <%= email_field_tag :email %><br/>

    <%= label_tag "Password: " %><br>
    <%= password_field_tag :password %>
  <br><br>
    <%= submit_tag "Log in" %>
  <% end %> 
  </div>
</div>