<!DOCTYPE html>
<html>
<head>
  <title>Teach Together</title>
  <link rel="shortcut icon" href="http://images.clipartpanda.com/light-bulb-vector-png-15-Light-Bulb-icon.png">
  <link rel="stylesheet" type="text/css" href="/grid.css">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="/main.js"></script>
</head>
<body>
<div class="container">

  <div class="col grid-1-8"></div>    

  <div class="nav-bar header section col grid-6-8">
    <div class="logo">
      <img src="/images/logo.png">
    </div>

    <div class="nav">
      <ul>
            <% if session[:user_id] %>
              <% @user = session[:user_id] %>
              <li class="nav-links">
                <%= link_to "SIGN OUT", login_path, :method => :delete %>
              </li>
              
              <li class="nav-links"><a href="/index">BROWSE</a></li>
              
              <li class="nav-links"><a href="/about">ABOUT</a></li>

              <li class="nav-links"><a href="/users/<%= @user %>">HOME</a></li>
            <% else %>

            <li class="nav-links"><a href="/index">BROWSE</a></li>

            <li class="nav-links create"><a href="/create">CREATE</a></li>
            
            <li class="nav-links"><a href="/about">ABOUT</a></li>
            
            <li class="nav-links"><a href="/login">LOGIN</a></li>

            <li class="nav-links"><a href="/users/new">SIGN UP</a></li>

            <li class="nav-links"><a href="/">HOME</a></li>

            <% end %>        
      </ul>
    </div>
  </div> 

  <% if session[:user_id] %>
    <% @user = session[:user_id] %>
    <div class="nav-right">
      <ul>
        <li>
          <a href="/unit_plans">Your Unit Plans</a>
        </li>
        <li>
          <a href="/unit_plans/new">New Unit Plan</a>
        </li>
        <li>
          <a href="/lesson_plans">Your Lesson Plans</a>
        </li>
        <li>
          <a href="/lesson_plans/new">New Lesson Plans</a>
        </li>
      </ul>
    </div>

  <% end %>

  <div class="col grid-6-8" id="main"> 
    <div class="body">
      <div class="line top"></div>
      <%= yield %>

      <div class="footer">
        <div class="line bottom"></div>
        <div class="footer-content">
          <div class="contant-us">
            <p class="footer-words">Have any tips, suggestions or comments for us? Weâ€™d love to hear from you!</p>
            <a href="mailto:teachtogetherinfo@gmail.com.com"><img id="email-logo" src="/images/google-plus-icon.png"></a>
          </div>
        <img id="footer-img" src="/images/happyteaching.png">
      </div>
    </div>
  </div>

  </div>



  <div class="col grid-1-8"></div>
   
</div>

</body>
</html>
