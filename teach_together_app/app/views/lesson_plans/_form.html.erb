<%= form_for @lessonplan, url: {action: 'create'} do |f| %>
  <%= f.hidden_field(:user_id, :value => @userid) %>

  <%= f.label(:title, "Title: ") %>
  <%= f.text_field(:title) %><br/><br/>

  <%= f.label(:author, "Author: ") %>
  <%= f.text_field(:author) %><br/><br/>

  <%= f.label(:grade, "Grade: ") %>
  <%= f.text_field(:grade) %><br/><br/>

  <%= f.label(:subject, "Subject: ") %>
  <%= f.text_field(:subject) %><br/><br/>

  <%= f.label(:date_and_time, "Date and Time: ") %>
  <%= f.text_field(:date_and_time) %><br/><br/>

  <%= f.label(:standard, "Standards: ") %>
  <%= f.text_field(:standard) %><br/><br/>

  <%= f.label(:objective, "Objectives (Students will be able to...): ") %>
  <%= f.text_field(:objective) %><br/><br/>

  <%= f.label(:essential_question, "Essential Questions: ") %>
  <%= f.text_field(:essential_question) %><br/><br/>

  <%= f.label(:assessment, "Assessment: ") %>
  <%= f.text_field(:assessment) %><br/><br/>

  <%= f.label(:vocabulary, "Key Vocabulary: ") %>
  <%= f.text_field(:vocabulary) %><br/><br/>

  <%= f.label(:material, "Materials: ") %>
  <%= f.text_field(:material) %><br/><br/>

  <%= f.label(:introduction, "Introduction: ") %>
  <%= f.text_field(:introduction) %><br/><br/>

  <%= f.label(:learning_plan, "Learning Plan: ") %>
  <%= f.text_field(:learning_plan) %><br/><br/>

  <%= f.label(:closing_summary, "Closing Summary: ") %>
  <%= f.text_field(:closing_summary) %><br/><br/>

  <p>Make this Unit Plan: </p>
  <%= f.radio_button(:is_public?, true) %>
  <%= f.label(:is_public?, "Public") %>
  <%= f.radio_button(:is_public?, false) %>
  <%= f.label(:is_public?, "Private") %>

  <br><br>
  <%= f.submit("New Unit Plan") %>
<% end %> 