<div class="main-content" id="forum-page">
  <h1><%= @forum.title %></h1>
  <h3>Network: <%= @networkname.network_name %> &nbsp; | &nbsp; Created By: <%= @forum.author %> </h3>
  <p><%= @forum.body %></p>

  <h3><b>Comments: </b></h3>

  <% @comments.each do |comment| %>
    <ul class="forum-comments">
      <li>
        <h3><%= comment.author %>: </h3>
        <p><%= comment.body %></p>
      </li>
    </ul>
  <% end %>

  <%= form_for [@forum, Comment.new] do |f| %>

    <%= f.hidden_field(:author, :value => @user.first_name) %>
    <%= f.hidden_field(:forum_id, :value => @forum.id) %>
    <div class="comments">
    <%= f.label(:body, "New Comment: ") %><br/>
    <%= f.text_area(:body, class: "comment-input") %><br/> 
    </div>
    <%= f.submit("Submit Comment", class: 'new net-btn') %>

  <% end %>

  <a href="/networks/<%= @networkname.id %>" id="back-net-btn" class="new net-btn back">Back to Network Page</a>

</div>
  
 