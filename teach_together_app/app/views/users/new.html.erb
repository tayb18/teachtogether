<div class="signup-page">
    <div class="col grid-1-8"></div>
    <div class="signup-login signup-1 col gird-4-8">
        <h1>Join the Teach Together Family</h1>
        <div class="signup-form">
          <%= form_for(@user) do |f| %>

            <%= f.label "First Name: "  %>
            <%= f.text_field :first_name %><br><br>

            <%= f.label "Last Name: "  %>
            <%= f.text_field :last_name %><br><br>


            <%= f.label "Email Address: "  %>
            <%= f.text_field :email %><br><br>

            <%= f.label "Password: " %>
            <%= f.password_field :password %><br><br>

            <%= f.label "Confirm Password: " %>
            <%= f.password_field :password_confirmation %><br><br>

            <%= f.submit "Sign Up", class: "btn signup-btn" %>

          <% end %>

    </div>
    <div class="col grid-1-8"></div>
</div>
