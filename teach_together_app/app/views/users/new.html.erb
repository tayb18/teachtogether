<h1>Sign Up To Join the Teach Together Family</h1>

<div class="form-signup">

  <%= form_for(@user) do |f| %>
    <h2 class="form-signup-heading">Sign Up</h2>

    <%= f.label "First Name: "  %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label "Last Name: "  %>
    <%= f.text_field :last_name %><br><br>


    <%= f.label "Email Address: "  %>
    <%= f.text_field :email %><br><br>

    <%= f.label "Password: " %>
    <%= f.password_field :password %><br><br>

    <%= f.label "Confirm Password: " %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Start Teaching Together!", class: "btn signup-btn" %>

  <% end %>

</div>