<div class="main-content" id="user-show">
  <h1>Welcome Back, <%= @user.first_name %></h1>

  <h2>Your Networks</h2>
  <% @networks.each do |network| %>
    <ul>
      <li><a href="/networks/<%= network.id %>"><%= network.network_name %></a></li>
    </ul>
  <% end %><br/>
  <a id="network-btn" class="new" href="/networks/new">Create a New Network</a>

  <h2>Browse Networks</h2>
  <% @all_networks.each do |network| %>
    <ul>
      <li>
        <%= network.network_name %> 
        <% form_for @net_user do %>
          <% @user = session[:user_id] %>
          <% f.hidden_field(:user_id, value: => @user) %>
          <% f.hidden_field(:network_id, value: => network.id) %>

          <%= f.submit('Join Network', class: 'new net-btn') %>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>




